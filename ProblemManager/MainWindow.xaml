<Window x:Class="ProblemManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dg2d="clr-namespace:DataGrid2DLibrary;assembly=DataGrid2DLibrary"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Plik">
                    <MenuItem Header="Otwórz">
                        <MenuItem Header="Z pliku"/>
                    </MenuItem>
                    <MenuItem Header="Zapisz"/>
                    <MenuItem Header="Wyjdź" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid Grid.Row="1">
            <dg2d:DataGrid2D Name="dataGrid" ItemsSource2D="{Binding ItemsList}"></dg2d:DataGrid2D>
        </Grid>
        <Grid Grid.Row="2" VerticalAlignment="Bottom">
            <Button Content="dodaj" Click="btnDodaj_Click"/>
        </Grid>
    </Grid>
</Window>

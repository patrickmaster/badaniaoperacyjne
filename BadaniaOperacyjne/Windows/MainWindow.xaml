<Window x:Class="BadaniaOperacyjne.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windows="clr-namespace:BadaniaOperacyjne.Windows"
        Title="Problem komiwojażera" Width="525" ResizeMode="CanMinimize"
        SizeToContent="Height">
    <Window.CommandBindings>
        <CommandBinding
            Command="{x:Static windows:MainWindow.OpenSolutionCommand}"
            Executed="OpenSolutionCommandExecuted"/>
    </Window.CommandBindings>
        <Grid Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Otwórz menedżera zagadnień, by rozwiązać nowy problem komiwojażera lub wczytać wcześniej utworzony problem" TextWrapping="Wrap" Margin="5" VerticalAlignment="Center"></TextBlock>
            <Button Grid.Row="0" Grid.Column="1" Content="Rozwiąż problem" Height="25" Margin="5" Click="btnSolveProblem_Click"></Button>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Wybierz spośród zapisanych rozwiązań problemów" TextWrapping="Wrap" Margin="5" VerticalAlignment="Center"></TextBlock>
            <Button Grid.Row="1" Grid.Column="1" Content="Wczytaj rozwiązanie" Height="25" Margin="5" Command="{x:Static windows:MainWindow.OpenSolutionCommand}"></Button>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Otwórz ustawienia, by zmienić parametry algorytmu" TextWrapping="Wrap" Margin="5" VerticalAlignment="Center"></TextBlock>
            <Button Grid.Row="2" Grid.Column="1" Content="Ustawienia" Height="25" Margin="5" Click="btnSettings_Click"></Button>
        
        </Grid>
    </Grid>
</Window>

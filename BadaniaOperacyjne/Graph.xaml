<Window x:Class="BadaniaOperacyjne.Graph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="Graph" Height="300" Width="600" MinHeight="300" MinWidth="600">
    <Grid>
        <d3:ChartPlotter Name="plotter" Margin="10,10,20,10">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalIntegerAxis Name="dateAxis"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalIntegerAxis Name="countAxis"/>
            </d3:ChartPlotter.VerticalAxis>

            <d3:Header FontFamily="Arial" x:Name="graphTitle" />
            <d3:VerticalAxisTitle FontFamily="Arial" x:Name="verticalAxisTitle" Content="Value"/>
            <d3:HorizontalAxisTitle FontFamily="Arial" x:Name="horizontalAxisTitle" Content="Argument"/>
        </d3:ChartPlotter>
    </Grid>
</Window>
